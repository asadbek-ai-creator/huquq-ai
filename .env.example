# Environment Configuration for huquqAI
# Copy this file to .env and update with your values

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_NAME=huquqAI

# API Settings
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# Language Settings
DEFAULT_LANGUAGE=kaa
SUPPORTED_LANGUAGES=kaa,uz,ru,en

# SPARQL Endpoint Configuration
SPARQL_ENDPOINT=http://localhost:3030/huquqai/sparql
SPARQL_UPDATE_ENDPOINT=http://localhost:3030/huquqai/update
SPARQL_GRAPH_STORE=http://localhost:3030/huquqai/data
SPARQL_TIMEOUT=30

# Database Configuration (if using MongoDB)
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_DATABASE=huquqai_db
MONGODB_USER=
MONGODB_PASSWORD=

# Database Configuration (if using PostgreSQL)
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DATABASE=huquqai_db
POSTGRES_USER=huquqai_user
POSTGRES_PASSWORD=

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/huquqai.log

# Security
SECRET_KEY=your-secret-key-here-change-in-production
API_KEY=your-api-key-here

# Telegram Bot
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# NLP Model Settings (if using)
NLP_MODEL=sentence-transformers/paraphrase-multilingual-MiniLM-L12-v2
EMBEDDING_DIM=384
SIMILARITY_THRESHOLD=0.7

# File Encoding (ensure UTF-8 for Karakalpak)
FILE_ENCODING=utf-8
DEFAULT_CHARSET=utf-8

# Data Paths
DATA_PATH=data
ONTOLOGIES_PATH=data/ontologies
KNOWLEDGE_PATH=data/knowledge
MODELS_PATH=data/models
CACHE_PATH=data/cache
